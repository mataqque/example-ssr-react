{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"strict": true,
		"outDir": "dist",
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "ES2017",
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noEmitOnError": false,
		"noUnusedLocals": false
	},
	"include": ["src/**/*", "types/*", "server.ts", "node_modules/vite/types/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
